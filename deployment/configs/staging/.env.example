# WitchCityRope Staging Environment Configuration
# Copy this file to .env and update with your actual values

# Environment
ASPNETCORE_ENVIRONMENT=Staging
ENVIRONMENT=staging

# Security Keys (generate secure random strings)
JWT_SECRET=your-staging-jwt-secret-min-32-characters-long
ENCRYPTION_KEY=your-32-character-encryption-key

# Database
DATABASE_CONNECTION=Data Source=/app/data/witchcityrope_staging.db;Cache=Shared;Journal Mode=WAL;

# API URLs
API_BASE_URL=https://staging-api.witchcityrope.com
WEB_BASE_URL=https://staging.witchcityrope.com

# Email Configuration (SendGrid)
SENDGRID_API_KEY=your-sendgrid-api-key-for-staging
EMAIL_FROM=noreply@staging.witchcityrope.com
EMAIL_FROM_NAME=WitchCity Rope (Staging)

# PayPal Configuration (Sandbox)
PAYPAL_CLIENT_ID=your-paypal-sandbox-client-id
PAYPAL_CLIENT_SECRET=your-paypal-sandbox-client-secret
PAYPAL_MODE=sandbox
PAYPAL_WEBHOOK_ID=your-paypal-sandbox-webhook-id


# Google OAuth (Optional)
GOOGLE_CLIENT_ID=your-google-oauth-client-id
GOOGLE_CLIENT_SECRET=your-google-oauth-client-secret

# Redis Cache (Optional)
USE_REDIS=true
REDIS_CONNECTION=localhost:6379
REDIS_PASSWORD=your-redis-password-for-staging

# Monitoring
GRAFANA_PASSWORD=your-grafana-admin-password
PROMETHEUS_ENABLED=true

# Feature Flags
ENABLE_REGISTRATION=true
REQUIRE_EMAIL_VERIFICATION=true
ENABLE_TWO_FACTOR=true
ENABLE_PAYMENTS=true
ENABLE_VETTING=true
ENABLE_DEBUG_MODE=true

# Logging
LOG_LEVEL=Information
ENABLE_SENSITIVE_DATA_LOGGING=false
LOG_RETENTION_DAYS=7

# Performance
ENABLE_RESPONSE_CACHING=true
CACHE_DURATION_MINUTES=5
ENABLE_COMPRESSION=true

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PERMIT_LIMIT=100
RATE_LIMIT_WINDOW_SECONDS=60

# File Upload
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_EXTENSIONS=.jpg,.jpeg,.png,.pdf,.doc,.docx

# SSL/Domain
DOMAIN=staging.witchcityrope.com
SSL_EMAIL=admin@witchcityrope.com

# Backup
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=7
BACKUP_SCHEDULE=0 2 * * *