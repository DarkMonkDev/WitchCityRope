# WitchCityRope Production Environment Configuration
# Copy this file to .env and update with your actual values

# Environment
ASPNETCORE_ENVIRONMENT=Production
ENVIRONMENT=production

# Security Keys (generate secure random strings - DIFFERENT from staging!)
JWT_SECRET=your-production-jwt-secret-min-32-characters-long
ENCRYPTION_KEY=your-32-character-encryption-key

# Database
DATABASE_CONNECTION=Data Source=/app/data/witchcityrope.db;Cache=Shared;Journal Mode=WAL;

# API URLs
API_BASE_URL=https://api.witchcityrope.com
WEB_BASE_URL=https://witchcityrope.com

# Email Configuration (SendGrid)
SENDGRID_API_KEY=your-sendgrid-api-key-for-production
EMAIL_FROM=noreply@witchcityrope.com
EMAIL_FROM_NAME=WitchCity Rope

# PayPal Configuration (Live)
PAYPAL_CLIENT_ID=your-paypal-live-client-id
PAYPAL_CLIENT_SECRET=your-paypal-live-client-secret
PAYPAL_MODE=live
PAYPAL_WEBHOOK_ID=your-paypal-live-webhook-id

# Syncfusion License
SYNCFUSION_LICENSE_KEY=your-syncfusion-license-key

# Google OAuth (Optional)
GOOGLE_CLIENT_ID=your-google-oauth-client-id
GOOGLE_CLIENT_SECRET=your-google-oauth-client-secret

# Redis Cache
USE_REDIS=true
REDIS_CONNECTION=localhost:6379
REDIS_PASSWORD=your-secure-redis-password-for-production

# Monitoring
GRAFANA_PASSWORD=your-secure-grafana-admin-password
PROMETHEUS_ENABLED=true

# Feature Flags
ENABLE_REGISTRATION=true
REQUIRE_EMAIL_VERIFICATION=true
ENABLE_TWO_FACTOR=true
ENABLE_PAYMENTS=true
ENABLE_VETTING=true
ENABLE_DEBUG_MODE=false

# Logging
LOG_LEVEL=Warning
ENABLE_SENSITIVE_DATA_LOGGING=false
LOG_RETENTION_DAYS=30

# Performance
ENABLE_RESPONSE_CACHING=true
CACHE_DURATION_MINUTES=10
ENABLE_COMPRESSION=true

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PERMIT_LIMIT=60
RATE_LIMIT_WINDOW_SECONDS=60

# File Upload
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_EXTENSIONS=.jpg,.jpeg,.png,.pdf,.doc,.docx

# SSL/Domain
DOMAIN=witchcityrope.com
SSL_EMAIL=admin@witchcityrope.com

# Backup
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE=0 2 * * *

# Security Headers
HSTS_ENABLED=true
HSTS_MAX_AGE=31536000
HSTS_INCLUDE_SUBDOMAINS=true
HSTS_PRELOAD=true

# Additional Production Settings
FORCE_HTTPS=true
SECURE_COOKIES=true
CORS_ALLOWED_ORIGINS=https://witchcityrope.com,https://www.witchcityrope.com