# WitchCityRope Environment Configuration Template
# Copy this file to .env.development, .env.staging, or .env.production
# and configure the appropriate values for your environment

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
NODE_ENV=development
VITE_APP_TITLE="WitchCityRope"
VITE_APP_VERSION=1.0.0-dev
VITE_APP_ENVIRONMENT=development

# =============================================================================
# PORT CONFIGURATION - CRITICAL FOR ENVIRONMENT CONSISTENCY
# =============================================================================
# React Development Server Port
VITE_PORT=5173

# API Base URL (External access for browser)
# Development: http://localhost:5655
# Staging: https://api-staging.witchcityrope.com
# Production: https://api.witchcityrope.com
VITE_API_BASE_URL=http://localhost:5655

# API Internal Port (for Docker container communication)
# This is the port the API listens on inside its container
VITE_API_INTERNAL_PORT=8080

# Database Port (External access for tools)
# Development: 5433
# Staging/Production: Use cloud database, no external port needed
VITE_DB_PORT=5433

# Test Server Port (Development only)
VITE_TEST_SERVER_PORT=8080

# =============================================================================
# DEVELOPMENT FEATURES
# =============================================================================
VITE_ENABLE_DEBUG=true
VITE_ENABLE_DEVTOOLS=true
VITE_LOG_LEVEL=debug
VITE_ENABLE_MSW=false
VITE_ENABLE_MOCK_DATA=false
VITE_ENABLE_ANALYTICS=false

# =============================================================================
# AUTHENTICATION CONFIGURATION
# =============================================================================
VITE_AUTH_COOKIE_NAME=WitchCityRope.Auth
VITE_AUTH_COOKIE_DOMAIN=localhost
VITE_AUTH_COOKIE_SECURE=false

# =============================================================================
# HOT MODULE REPLACEMENT (HMR) CONFIGURATION
# =============================================================================
# Required for Docker development
VITE_HMR_PORT=24679
VITE_HMR_HOST=0.0.0.0
VITE_HMR_CLIENT_PORT=24679

# File watching for Docker
CHOKIDAR_USEPOLLING=true
CHOKIDAR_INTERVAL=1000
WATCHPACK_POLLING=true
FAST_REFRESH=true

# =============================================================================
# DOCKER-SPECIFIC CONFIGURATION
# =============================================================================
# Set to "true" when running in Docker containers
DOCKER_ENV=false

# Container-to-container communication URLs (when DOCKER_ENV=true)
VITE_API_CONTAINER_URL=http://api:8080