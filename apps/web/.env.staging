# WitchCityRope Staging Environment Configuration
NODE_ENV=staging
VITE_APP_TITLE="WitchCityRope (Staging)"
VITE_APP_VERSION=1.0.0-staging
VITE_APP_ENVIRONMENT=staging

# =============================================================================
# PORT CONFIGURATION - STAGING
# =============================================================================
VITE_PORT=5173
VITE_API_BASE_URL=https://api-staging.witchcityrope.com
VITE_API_INTERNAL_PORT=8080
# No DB port needed for staging (cloud database)
VITE_TEST_SERVER_PORT=8080

# =============================================================================
# STAGING FEATURES
# =============================================================================
VITE_ENABLE_DEBUG=false
VITE_ENABLE_DEVTOOLS=false
VITE_LOG_LEVEL=info
VITE_ENABLE_MSW=false
VITE_ENABLE_MOCK_DATA=false
VITE_ENABLE_ANALYTICS=true

# =============================================================================
# AUTHENTICATION CONFIGURATION
# =============================================================================
VITE_AUTH_COOKIE_NAME=WitchCityRope.Auth
VITE_AUTH_COOKIE_DOMAIN=.witchcityrope.com
VITE_AUTH_COOKIE_SECURE=true

# =============================================================================
# DOCKER-SPECIFIC CONFIGURATION
# =============================================================================
DOCKER_ENV=true
VITE_API_CONTAINER_URL=http://api:8080