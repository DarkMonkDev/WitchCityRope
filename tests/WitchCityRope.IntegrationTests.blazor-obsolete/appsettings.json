{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "Microsoft.EntityFrameworkCore": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/integration-tests-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7
        }
      }
    ]
  },
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5433;Database=witchcityrope_integration_tests;Username=postgres;Password=WitchCity2024!",
    "Redis": "localhost:6379"
  },
  "JwtSettings": {
    "SecretKey": "INTEGRATION-TEST-SECRET-KEY-MIN-32-CHARACTERS",
    "Issuer": "WitchCityRope-IntegrationTests",
    "Audience": "WitchCityRopeUsers-IntegrationTests",
    "ExpirationMinutes": 60,
    "RefreshTokenExpirationDays": 7
  },
  "Email": {
    "From": "integration-test@witchcityrope.com",
    "FromName": "WitchCity Rope Integration Tests",
    "SendGrid": {
      "ApiKey": "SG.integration-test-api-key",
      "SandboxMode": true,
      "Templates": {
        "Welcome": "d-integration-welcome",
        "EmailVerification": "d-integration-verification",
        "PasswordReset": "d-integration-password-reset",
        "EventRegistration": "d-integration-event-reg",
        "EventReminder": "d-integration-event-reminder",
        "VettingApproved": "d-integration-vetting-approved",
        "VettingRejected": "d-integration-vetting-rejected"
      }
    }
  },
  "PayPal": {
    "ClientId": "integration-test-paypal-client",
    "ClientSecret": "integration-test-paypal-secret",
    "Mode": "sandbox",
    "WebhookId": "integration-test-webhook"
  },
  "Stripe": {
    "PublishableKey": "pk_test_integration_1234567890",
    "SecretKey": "sk_test_integration_1234567890",
    "WebhookSecret": "whsec_test_integration_secret"
  },
  "Security": {
    "EncryptionKey": "INTEGRATION-TEST-ENCRYPTION-KEY32",
    "PasswordMinLength": 8,
    "PasswordRequireDigit": true,
    "PasswordRequireUppercase": true,
    "PasswordRequireNonAlphanumeric": true,
    "LockoutMaxAttempts": 5,
    "LockoutDurationMinutes": 15
  },
  "Features": {
    "EnableRegistration": true,
    "RequireEmailVerification": true,
    "EnableTwoFactor": true,
    "EnablePayments": true,
    "EnableVetting": true
  },
  "UseRedis": false,
  "TestSettings": {
    "UseTestDatabase": true,
    "CleanupDatabase": true,
    "MockExternalServices": true,
    "TestDataPrefix": "integration_test_"
  }
}