{
  "TestSettings": {
    "BaseUrl": "https://localhost:5654",
    "BrowserType": "chromium",
    "Headless": true,
    "SlowMo": 0,
    "Timeout": 30000,
    "VideoRecording": false,
    "ScreenshotsOnFailure": true,
    "TraceOnFailure": true,
    "Locale": "en-US",
    "TimezoneId": "America/New_York",
    "ViewportWidth": 1920,
    "ViewportHeight": 1080
  },
  "ConnectionStrings": {
    "TestDatabase": "Server=(localdb)\\mssqllocaldb;Database=WitchCityRope_E2E_Tests;Trusted_Connection=true;MultipleActiveResultSets=true"
  },
  "TestData": {
    "DefaultPassword": "Test123!@#",
    "TestUserPrefix": "e2e_test_",
    "CleanupTestDataAfterRun": true
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/e2e-tests-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7
        }
      }
    ]
  }
}