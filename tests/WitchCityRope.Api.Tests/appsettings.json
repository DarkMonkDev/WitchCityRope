{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      }
    ]
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=:memory:",
    "Redis": "localhost:6379"
  },
  "JwtSettings": {
    "SecretKey": "TEST-SECRET-KEY-FOR-UNIT-TESTS-MINIMUM-32-CHARS",
    "Issuer": "WitchCityRope-Tests",
    "Audience": "WitchCityRopeUsers-Tests",
    "ExpirationMinutes": 60,
    "RefreshTokenExpirationDays": 7
  },
  "Email": {
    "From": "test@witchcityrope.com",
    "FromName": "WitchCity Rope Tests",
    "SendGrid": {
      "ApiKey": "SG.test-api-key-for-unit-tests",
      "SandboxMode": true,
      "Templates": {
        "Welcome": "d-test-welcome-template",
        "EmailVerification": "d-test-verification-template",
        "PasswordReset": "d-test-password-reset-template",
        "EventRegistration": "d-test-event-registration-template",
        "EventReminder": "d-test-event-reminder-template",
        "VettingApproved": "d-test-vetting-approved-template",
        "VettingRejected": "d-test-vetting-rejected-template"
      }
    },
    "SmtpHost": "localhost",
    "SmtpPort": 1025,
    "SmtpUsername": "test",
    "SmtpPassword": "test",
    "EnableSsl": false
  },
  "PayPal": {
    "ClientId": "test-paypal-client-id",
    "ClientSecret": "test-paypal-client-secret",
    "Mode": "sandbox",
    "WebhookId": "test-webhook-id"
  },
  "Stripe": {
    "PublishableKey": "pk_test_51234567890",
    "SecretKey": "sk_test_51234567890",
    "WebhookSecret": "whsec_test_secret"
  },
  "Security": {
    "EncryptionKey": "TEST-ENCRYPTION-KEY-32-CHARACTERS",
    "PasswordMinLength": 8,
    "PasswordRequireDigit": true,
    "PasswordRequireUppercase": true,
    "PasswordRequireNonAlphanumeric": true,
    "LockoutMaxAttempts": 5,
    "LockoutDurationMinutes": 15
  },
  "Features": {
    "EnableRegistration": true,
    "RequireEmailVerification": false,
    "EnableTwoFactor": false,
    "EnablePayments": false,
    "EnableVetting": true
  },
  "UseRedis": false,
  "TestSettings": {
    "UseInMemoryDatabase": true,
    "DisableExternalServices": true,
    "MockEmailService": true,
    "MockPaymentService": true
  }
}