{
  "name": "witchcityrope-react",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "test:ci": "turbo run test:ci",
    "test:unit": "turbo run test:unit",
    "test:integration": "turbo run test:integration",
    "test:e2e": "turbo run test:e2e",
    "test:e2e:playwright": "cd apps/web && npx playwright test",
    "test:containerized": "./scripts/run-integration-tests.sh",
    "test:performance": "./scripts/run-performance-tests.sh",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,md,json}\"",
    "generate:types": "cd packages/shared-types && npm run generate",
    "generate:types:watch": "cd packages/shared-types && npm run generate:watch"
  },
  "devDependencies": {
    "@playwright/test": "^1.54.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "prettier": "^3.6.2",
    "turbo": "latest"
  },
  "packageManager": "npm@10.2.4",
  "dependencies": {
    "@tinymce/tinymce-react": "^6.3.0",
    "tinymce": "^8.0.2"
  }
}
