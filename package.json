{
  "name": "witchcityrope",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "echo '‚ùå ERROR: Use ./dev.sh to start Docker containers. Local dev servers are disabled.' && exit 1",
    "dev:docker-only": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "test:ci": "turbo run test:ci",
    "test:unit": "turbo run test:unit",
    "test:integration": "turbo run test:integration",
    "test:e2e": "turbo run test:e2e",
    "test:e2e:playwright": "cd apps/web && npx playwright test",
    "test:e2e:docker": "npx playwright test --config=playwright.config.ts",
    "test:e2e:docker:ui": "npx playwright test --config=playwright.config.ts --ui",
    "test:e2e:docker:debug": "npx playwright test --config=playwright.config.ts --debug",
    "test:containerized": "./scripts/run-integration-tests.sh",
    "test:performance": "./scripts/run-performance-tests.sh",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,md,json}\"",
    "generate:types": "cd packages/shared-types && npm run generate",
    "generate:types:watch": "cd packages/shared-types && npm run generate:watch",
    "prepare": "husky"
  },
  "devDependencies": {
    "@playwright/test": "^1.54.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.3",
    "prettier": "^3.6.2",
    "turbo": "latest"
  },
  "packageManager": "npm@10.2.4",
  "lint-staged": {
    "apps/web/src/**/*.{ts,tsx}": [
      "bash -c 'cd apps/web && eslint --fix --max-warnings 0 \"$@\"' _",
      "prettier --write"
    ]
  }
}
