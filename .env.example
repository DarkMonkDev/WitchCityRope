# .env.example - Environment Configuration Template
# Copy this file to .env and customize for your environment
# This file shows all available environment variables with example values

# ============================================================================
# APPLICATION CONFIGURATION
# ============================================================================

# Application Metadata
VITE_APP_NAME=WitchCityRope
VITE_APP_VERSION=1.0.0
VITE_APP_ENVIRONMENT=development

# Environment Type (development, test, production)
NODE_ENV=development
ASPNETCORE_ENVIRONMENT=Development

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

# PostgreSQL Database Settings (merged from both versions)
POSTGRES_DB=witchcityrope_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=WitchCity2024!
POSTGRES_HOST=postgres

# Test Database Settings (for docker-compose.test.yml)
POSTGRES_TEST_PASSWORD=testpass123

# Production Database Settings (override in .env.production)
# POSTGRES_USER=witchcity_prod
# POSTGRES_PASSWORD=secure_production_password_here

# ============================================================================
# AUTHENTICATION & JWT CONFIGURATION
# ============================================================================

# JWT Authentication Settings
JWT_SECRET=dev-jwt-secret-for-local-testing-make-it-long-enough
JWT_ISSUER=WitchCityRope
JWT_AUDIENCE=WitchCityRope-API
JWT_EXPIRY_MINUTES=1440

# ============================================================================
# THIRD-PARTY SERVICES
# ============================================================================


# SendGrid Email Service (optional)
SENDGRID_API_KEY=your_sendgrid_api_key_here
SENDGRID_FROM_EMAIL=noreply@witchcityrope.com
SENDGRID_FROM_NAME=WitchCityRope

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# ============================================================================
# OPTIONAL SERVICES
# ============================================================================

# pgAdmin Configuration (optional)
PGADMIN_EMAIL=admin@witchcityrope.local
PGADMIN_PASSWORD=admin

# Logging Configuration (optional)
LOG_LEVEL=Information

# CORS Configuration (optional)
CORS_ORIGINS=http://localhost:5173,http://localhost:5651

# Session Configuration (optional)
SESSION_TIMEOUT=20

# Docker Compose Profiles
# To enable additional services, uncomment:
# COMPOSE_PROFILES=debug,dev-tools

# ============================================================================
# DEVELOPMENT TOOLS
# ============================================================================

# React Development Server
VITE_PORT=5173
VITE_HOST=localhost

# API Development Server  
API_PORT=5653
API_HOST=localhost

# Database Ports
POSTGRES_PORT=5433
POSTGRES_INTERNAL_PORT=5432

# ============================================================================
# SECURITY CONFIGURATION
# ============================================================================

# Encryption key for sensitive data
ENCRYPTION_KEY=your-32-character-encryption-key-here

# Cookie settings
COOKIE_SECRET=your-cookie-secret-key-here
COOKIE_SECURE=false
COOKIE_HTTPONLY=true
COOKIE_SAMESITE=Strict

# ============================================================================
# PERFORMANCE & MONITORING
# ============================================================================

# Health check intervals
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_RETRIES=3

# Memory limits (for production)
# NODE_OPTIONS="--max_old_space_size=2048"