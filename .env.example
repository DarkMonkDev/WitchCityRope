# Witch City Rope Docker Environment Configuration
# Copy this file to .env and fill in your values

# Environment Configuration
ASPNETCORE_ENVIRONMENT=Development
BUILD_TARGET=development
DETAILED_ERRORS=true

# JWT Configuration
JWT_SECRET=YourSuperSecretKeyForDevelopmentPurposesOnly!ThisShouldBeAtLeast32Characters

# SendGrid Email Configuration
SENDGRID_API_KEY=your_sendgrid_api_key_here

# PayPal Configuration
PAYPAL_CLIENT_ID=your_paypal_client_id_here
PAYPAL_CLIENT_SECRET=your_paypal_client_secret_here
PAYPAL_MODE=sandbox

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# Syncfusion License
SYNCFUSION_LICENSE_KEY=your_syncfusion_license_key_here

# Database Configuration (optional overrides)
# DB_PATH=/app/data/witchcityrope.db

# Logging Configuration (optional)
# LOG_LEVEL=Information

# CORS Configuration (optional)
# CORS_ORIGINS=http://localhost:5000,https://localhost:5001

# Session Configuration (optional)
# SESSION_TIMEOUT=20

# Docker Compose Profiles
# To enable additional services, uncomment:
# COMPOSE_PROFILES=debug,dev-tools