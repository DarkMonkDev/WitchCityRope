@page "/login"
@model WitchCityRope.Web.Pages.Account.LoginModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Redirecting to login...</title>
    <script>
        // Redirect to the Blazor login component
        window.location.href = '/auth/login@(Model.ReturnUrl != null ? "?returnUrl=" + Uri.EscapeDataString(Model.ReturnUrl) : "")';
    </script>
</head>
<body>
    <p>Redirecting to login page...</p>
</body>
</html>