            GenerateMockData();
            
            lastRefreshTime = DateTime.Now;
        }
        catch (Exception)
        {
            // Handle error
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task RefreshData()
    {
        await LoadDashboardData();
    }

