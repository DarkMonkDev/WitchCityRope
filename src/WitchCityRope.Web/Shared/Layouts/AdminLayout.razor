    </div>
</div>

<style>
    /* Admin Container */
    .admin-container {
        min-height: 100vh;
        background: #f5f5f5;
    }

    /* Admin Header */
    .admin-header {
        background: #1a1a1a;
        padding: 16px 40px;
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    }

    .admin-header-content {
        max-width: 1600px;
        margin: 0 auto;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .admin-logo {
        display: flex;
        align-items: center;
        gap: 16px;
        text-decoration: none;
    }

    .logo-text {
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
        font-size: 28px;
        font-weight: 700;
        color: #ffffff;
        letter-spacing: -0.5px;
        text-shadow: 0 2px 4px rgba(0,0,0,0.2);
    }

    .admin-badge {
        background: #8B4513;
        color: #ffffff;
        padding: 4px 12px;
        border-radius: 20px;
        font-size: 12px;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    .admin-user {
        display: flex;
        align-items: center;
        gap: 16px;
        color: #ffffff;
    }

    .admin-avatar {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        background: #8B4513;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 600;
        color: #ffffff;
    }

    /* Layout */
    .admin-layout {
        display: flex;
        max-width: 1600px;
        margin: 0 auto;
        min-height: calc(100vh - 70px);
    }

    /* Sidebar */
    .admin-sidebar {
        width: 260px;
        background: #ffffff;
        padding: 32px;
        border-right: 2px solid #e0e0e0;
    }

    .sidebar-nav {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .sidebar-section {
        margin-bottom: 40px;
    }

    .sidebar-title {
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
        font-size: 14px;
        font-weight: 700;
        color: #666666;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        margin-bottom: 16px;
    }

    .sidebar-link {
        display: flex;
        align-items: center;
        gap: 16px;
        padding: 12px 16px;
        color: #333333;
        text-decoration: none;
        border-radius: 8px;
        transition: all 200ms ease;
        margin-bottom: 8px;
        font-weight: 500;
        position: relative;
    }

    .sidebar-link:hover {
        background: #f5f5f5;
        color: #1a1a1a;
    }

    .sidebar-link.active {
        background: #8B4513;
        color: #ffffff;
    }

    .sidebar-icon {
        width: 20px;
        height: 20px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 16px;
    }

    .sidebar-badge {
        margin-left: auto;
        background: #ff6b6b;
        color: white;
        padding: 2px 8px;
        border-radius: 10px;
        font-size: 11px;
        font-weight: 600;
    }

    .sidebar-badge.danger {
        background: #ff6b6b;
    }

    /* Main Content */
    .admin-main {
        flex: 1;
        padding: 40px;
        overflow-x: hidden;
    }

    /* Responsive */
    @@media (max-width: 1024px) {
        .admin-sidebar {
            width: 220px;
            padding: 24px;
        }
        
        .admin-main {
            padding: 32px;
        }
    }

    @@media (max-width: 768px) {
        .admin-header {
            padding: 16px 20px;
        }
        
        .admin-layout {
            flex-direction: column;
        }
        
        .admin-sidebar {
            width: 100%;
            border-right: none;
            border-bottom: 2px solid #e0e0e0;
            padding: 16px;
        }
        
        .sidebar-section {
            margin-bottom: 24px;
        }
        
        .sidebar-nav {
            display: flex;
            flex-wrap: wrap;
            gap: 8px;
        }
        
        .sidebar-link {
            padding: 8px 16px;
            font-size: 14px;
        }
        
        .admin-main {
            padding: 24px;
        }
    }
</style>

@code {
    private UserDto? _currentUser;
    private int _vettingCount = 3;
    private int _incidentCount = 0;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            _currentUser = await AuthService.GetCurrentUserAsync();
        }
        catch
        {
            // Ignore errors, will use default
        }
    }

    private string GetInitials(string? name)
    {
        if (string.IsNullOrWhiteSpace(name))
            return "A";
        
        var parts = name.Split(' ', StringSplitOptions.RemoveEmptyEntries);
        if (parts.Length >= 2)
            return $"{parts[0][0]}{parts[1][0]}".ToUpper();
        
        return name.Substring(0, Math.Min(2, name.Length)).ToUpper();
    }
}