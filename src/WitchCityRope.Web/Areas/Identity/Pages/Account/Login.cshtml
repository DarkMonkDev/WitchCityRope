@page
@model WitchCityRope.Web.Areas.Identity.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Log in";
    Layout = "/Shared/Layouts/_IdentityLayout.cshtml";
}

<div class="auth-page">
    <div class="bg-shape-1"></div>
    <div class="bg-shape-2"></div>
    
    <div class="auth-card">
        <div class="auth-header">
            <h1 class="auth-title">Welcome Back</h1>
            <p class="auth-subtitle">Salem's premier rope education community</p>
        </div>
        
        <div class="age-notice">
            21+ COMMUNITY â€¢ AGE VERIFICATION REQUIRED
        </div>
        
        <div class="form-container">
            <form id="account" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                
                <div class="form-group">
                    <label asp-for="Input.EmailOrUsername" class="form-label">Email or Username</label>
                    <input asp-for="Input.EmailOrUsername" class="form-control wcr-input" placeholder="your@email.com or username" />
                    <span asp-validation-for="Input.EmailOrUsername" class="text-danger"></span>
                </div>
                
                <div class="form-group">
                    <label asp-for="Input.Password" class="form-label">Password</label>
                    <input asp-for="Input.Password" class="form-control wcr-input" placeholder="Enter your password" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                
                <div class="checkbox-group">
                    <label asp-for="Input.RememberMe" class="form-label">
                        <input asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>
                
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Sign In</button>
                </div>
                
                <div class="auth-footer">
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                    </p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                    </p>
                </div>
            </form>
        </div>
    </div>
</div>


<style>
    .auth-page {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 2rem 1rem;
        position: relative;
        background-color: #f5f5f5;
    }
    
    .bg-shape-1, .bg-shape-2 {
        position: fixed;
        border-radius: 50%;
        opacity: 0.1;
        z-index: -1;
    }
    
    .bg-shape-1 {
        top: -200px;
        right: -200px;
        width: 400px;
        height: 400px;
        background: radial-gradient(circle, #880124 0%, transparent 70%);
    }
    
    .bg-shape-2 {
        bottom: -150px;
        left: -150px;
        width: 300px;
        height: 300px;
        background: radial-gradient(circle, #880124 0%, transparent 70%);
    }
    
    .auth-card {
        background: white;
        border-radius: 24px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        width: 100%;
        max-width: 480px;
        overflow: hidden;
    }
    
    .auth-header {
        background: linear-gradient(135deg, #880124 0%, #660033 100%);
        padding: 3rem 2rem 2rem;
        text-align: center;
        color: white;
    }
    
    .auth-title {
        font-size: 32px;
        font-weight: 800;
        margin-bottom: 0.5rem;
    }
    
    .auth-subtitle {
        font-size: 16px;
        opacity: 0.9;
    }
    
    .age-notice {
        background: rgba(136, 1, 36, 0.1);
        color: #880124;
        padding: 0.75rem 1rem;
        text-align: center;
        font-size: 14px;
        font-weight: 600;
        letter-spacing: 0.5px;
    }
    
    .form-container {
        padding: 2rem;
    }
    
    .form-group {
        margin-bottom: 1.5rem;
    }
    
    .form-label {
        display: block;
        font-size: 14px;
        font-weight: 600;
        color: #333;
        margin-bottom: 0.5rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }
    
    .wcr-input {
        width: 100%;
        padding: 0.75rem 1rem;
        font-size: 16px;
        border: 2px solid #e0e0e0;
        border-radius: 8px;
        transition: all 0.3s ease;
    }
    
    .wcr-input:focus {
        outline: none;
        border-color: #880124;
        box-shadow: 0 0 0 3px rgba(136, 1, 36, 0.1);
    }
    
    .checkbox-group {
        display: flex;
        align-items: center;
        margin: 1.5rem 0;
    }
    
    .checkbox-group input[type="checkbox"] {
        margin-right: 0.5rem;
    }
    
    .btn-primary {
        background: #880124;
        border: none;
        padding: 1rem;
        font-size: 16px;
        font-weight: 600;
        border-radius: 8px;
        transition: all 0.3s ease;
    }
    
    .btn-primary:hover {
        background: #660033;
        transform: translateY(-1px);
        box-shadow: 0 4px 12px rgba(136, 1, 36, 0.3);
    }
    
    .auth-footer {
        text-align: center;
        margin-top: 2rem;
    }
    
    .auth-footer a {
        color: #880124;
        text-decoration: none;
        font-weight: 600;
    }
    
    .auth-footer a:hover {
        text-decoration: underline;
    }
    
    .text-danger {
        color: #dc3545;
        font-size: 14px;
        margin-top: 0.25rem;
    }
</style>