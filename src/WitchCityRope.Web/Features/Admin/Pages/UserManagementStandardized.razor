                                    <button class="btn-action" @onclick="() => ShowEditRoleModal(user)" title="Role">
                                        üè∑Ô∏è
                                    </button>
                                    <button class="btn-action" @onclick="() => ShowSendEmailModal(user)" title="Email">
                                        ‚úâÔ∏è
                                    </button>
                                    <button class="btn-action" @onclick="() => ToggleUserStatus(user)" title="Status">
                                        ‚ãÆ
                                    </button>
                                </div>
                            </td>
                        </tr>
