@code {
    [Parameter]
    [SupplyParameterFromQuery]
    public string? Code { get; set; }

    private ResetPasswordModel resetModel = new();
    private bool isSubmitting = false;
    private bool resetSuccess = false;
    private string? errorMessage;

    public class ResetPasswordModel
    {
        [Required(ErrorMessage = "Email address is required")]
        [EmailAddress(ErrorMessage = "Please enter a valid email address")]
        public string Email { get; set; } = string.Empty;

        [Required(ErrorMessage = "Password is required")]
        [StringLength(100, ErrorMessage = "Password must be at least {2} characters long", MinimumLength = 8)]
        [DataType(DataType.Password)]
        public string Password { get; set; } = string.Empty;

        [Required(ErrorMessage = "Password confirmation is required")]
        [Compare("Password", ErrorMessage = "Passwords do not match")]
        [DataType(DataType.Password)]
        public string ConfirmPassword { get; set; } = string.Empty;
    }

    private async Task HandleResetPassword()
    {
        if (string.IsNullOrEmpty(Code))
        {
            errorMessage = "Invalid password reset code.";
            return;
        }

        try
        {
            isSubmitting = true;
            errorMessage = null;
            StateHasChanged();

            var user = await UserManager.FindByEmailAsync(resetModel.Email);
            if (user == null)
            {
                // Don't reveal that the user does not exist
                errorMessage = "Password reset failed. Please check your email and try again.";
                return;
            }

            var decodedCode = Encoding.UTF8.GetString(WebEncoders.Base64UrlDecode(Code));
            var result = await UserManager.ResetPasswordAsync(user, decodedCode, resetModel.Password);

            if (result.Succeeded)
            {
                Logger.LogInformation("User {UserId} successfully reset their password", user.Id);
                resetSuccess = true;
                
                // If the user was locked out, unlock them
                if (await UserManager.IsLockedOutAsync(user))
                {
                    await UserManager.SetLockoutEndDateAsync(user, null);
                }
            }
            else
            {
                var errors = string.Join(" ", result.Errors.Select(e => e.Description));
                errorMessage = $"Password reset failed: {errors}";
                Logger.LogWarning("Password reset failed for user {UserId}: {Errors}", user.Id, errors);
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error during password reset");
            errorMessage = "An error occurred while resetting your password. Please try again.";
        }
        finally
        {
            isSubmitting = false;
            StateHasChanged();
        }
    }
}