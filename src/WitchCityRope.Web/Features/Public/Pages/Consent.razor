<div class="consent-page">
    <div class="container">
        <div class="page-header">
            <h1>@(contentPage?.Title ?? "Consent & Negotiation")</h1>
            <p class="lead">Understanding consent, communication, and safety in rope bondage</p>
        </div>
        
        @if (IsAdmin)
        {
            <div class="cms-admin-controls">
                @if (IsEditing)
                {
                    <div class="cms-edit-toolbar">
                        <button class="btn btn-success" @onclick="SaveContentAsync" disabled="@IsSaving">
                            @if (IsSaving)
                            {
                                <span class="spinner-border spinner-border-sm me-2"></span>
                            }
                            <i class="fas fa-save me-1"></i> Save
                        </button>
                        <button class="btn btn-secondary" @onclick="CancelEditAsync">
                            <i class="fas fa-times me-1"></i> Cancel
                        </button>
                    </div>
                }
                else
                {
                    <button class="btn btn-outline-primary btn-sm" @onclick="StartEditAsync">
                        <i class="fas fa-edit me-1"></i> Edit Page
                    </button>
                }
            </div>
        }
        
        <div class="cms-content-container">
            @if (IsEditing)
            {
                <div class="cms-editor-container">
                    <EditForm Model="@editModel" OnValidSubmit="SaveContentAsync">
                        <DataAnnotationsValidator />
                        
                        <div class="mb-3">
                            <WcrInputText @bind-Value="editModel.Title" 
                                          Label="Page Title"
                                          IsRequired="true" />
                        </div>
                        
                        <div class="mb-3">
                            <label class="form-label">Content</label>
                            <SfRichTextEditor @bind-Value="@EditableContent" 
                                              Height="600px"
                                              @ref="RichTextEditorRef"
                                              Placeholder="Enter your content here...">
                                <RichTextEditorToolbarSettings Items="@ToolbarItems" />
                            </SfRichTextEditor>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-6">
                                <WcrInputTextArea @bind-Value="editModel.MetaDescription" 
                                                  Label="Meta Description"
                                                  Placeholder="Page description for SEO"
                                                  Rows="3" />
                            </div>
                            <div class="col-md-6">
                                <WcrInputTextArea @bind-Value="editModel.MetaKeywords" 
                                                  Label="Meta Keywords"
                                                  Placeholder="Keywords separated by commas"
                                                  Rows="3" />
                            </div>
                        </div>
                    </EditForm>
                </div>
            }
            else
            {
                <div class="cms-content">
                    @if (contentPage != null)
                    {
                        @((MarkupString)contentPage.Content)
                    }
                    else
                    {
                        <div class="default-content">
                            <div class="consent-intro">
                                <div class="highlight-box">
                                    <i class="fas fa-heart"></i>
                                    <h2>Consent is the Foundation</h2>
                                    <p>At Witch City Rope, enthusiastic and ongoing consent is the cornerstone of all our activities. This page outlines our approach to consent, negotiation, and creating safe spaces for rope bondage practice.</p>
                                </div>
                            </div>

                            <div class="consent-section">
                                <h2>What is Consent?</h2>
                                <div class="concept-grid">
                                    <div class="concept-card">
                                        <h3>Informed</h3>
                                        <p>Understanding what you're agreeing to, including risks and activities involved.</p>
                                    </div>
                                    <div class="concept-card">
                                        <h3>Enthusiastic</h3>
                                        <p>Genuine desire to participate, not just passive agreement or absence of "no."</p>
                                    </div>
                                    <div class="concept-card">
                                        <h3>Ongoing</h3>
                                        <p>Consent can be withdrawn at any time and must be continuously reaffirmed.</p>
                                    </div>
                                    <div class="concept-card">
                                        <h3>Specific</h3>
                                        <p>Agreement to particular activities doesn't imply consent to everything.</p>
                                    </div>
                                </div>
                            </div>

                            <div class="consent-section">
                                <h2>Negotiation Process</h2>
                                <div class="process-steps">
                                    <div class="step">
                                        <div class="step-number">1</div>
                                        <div class="step-content">
                                            <h3>Initial Discussion</h3>
                                            <p>Share experience levels, interests, and general boundaries before any rope work begins.</p>
                                        </div>
                                    </div>
                                    <div class="step">
                                        <div class="step-number">2</div>
                                        <div class="step-content">
                                            <h3>Specific Planning</h3>
                                            <p>Discuss specific ties, positions, duration, and any props or tools to be used.</p>
                                        </div>
                                    </div>
                                    <div class="step">
                                        <div class="step-number">3</div>
                                        <div class="step-content">
                                            <h3>Safety Check</h3>
                                            <p>Review safety signals, emergency procedures, and aftercare needs.</p>
                                        </div>
                                    </div>
                                    <div class="step">
                                        <div class="step-number">4</div>
                                        <div class="step-content">
                                            <h3>Ongoing Communication</h3>
                                            <p>Maintain verbal and non-verbal communication throughout the session.</p>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="consent-section">
                                <h2>Communication Tools</h2>
                                <div class="tools-grid">
                                    <div class="tool-card">
                                        <h3>Safe Words</h3>
                                        <ul>
                                            <li><strong>Yellow/Slow:</strong> Slow down, check in, adjust</li>
                                            <li><strong>Red/Stop:</strong> Stop all activity immediately</li>
                                            <li><strong>Green/Good:</strong> Everything is fine, continue</li>
                                        </ul>
                                    </div>
                                    <div class="tool-card">
                                        <h3>Non-Verbal Signals</h3>
                                        <ul>
                                            <li>Hand signals for when speech is difficult</li>
                                            <li>Tapping out with hands or feet</li>
                                            <li>Dropping a held object (if hands are free)</li>
                                        </ul>
                                    </div>
                                </div>
                            </div>

                            <div class="consent-section">
                                <h2>Boundaries & Limits</h2>
                                <div class="boundaries-info">
                                    <div class="boundary-type">
                                        <h3>Hard Limits</h3>
                                        <p>Activities that are absolutely off-limits under any circumstances. These must always be respected without question or pressure to change.</p>
                                    </div>
                                    <div class="boundary-type">
                                        <h3>Soft Limits</h3>
                                        <p>Activities you're unsure about or need special consideration for. These might change with experience, trust, or circumstances.</p>
                                    </div>
                                    <div class="boundary-type">
                                        <h3>Time Limits</h3>
                                        <p>Boundaries around session duration, specific positions, or time of day. Physical and emotional stamina varies.</p>
                                    </div>
                                </div>
                            </div>

                            <div class="consent-section">
                                <h2>Creating Safe Spaces</h2>
                                <div class="safety-principles">
                                    <div class="principle">
                                        <i class="fas fa-users"></i>
                                        <h3>Inclusive Environment</h3>
                                        <p>We welcome people of all backgrounds, identities, and experience levels while maintaining community safety.</p>
                                    </div>
                                    <div class="principle">
                                        <i class="fas fa-eye"></i>
                                        <h3>Community Accountability</h3>
                                        <p>Everyone is responsible for maintaining consent culture and speaking up when they see violations.</p>
                                    </div>
                                    <div class="principle">
                                        <i class="fas fa-shield-alt"></i>
                                        <h3>Zero Tolerance</h3>
                                        <p>Consent violations result in immediate intervention and potential removal from our community.</p>
                                    </div>
                                </div>
                            </div>

                            <div class="consent-section">
                                <h2>Resources & Support</h2>
                                <div class="resources-grid">
                                    <div class="resource-card">
                                        <h3>Need Help?</h3>
                                        <p>If you experience or witness a consent violation:</p>
                                        <ul>
                                            <li>Speak with event organizers immediately</li>
                                            <li>Use our <a href="/incident-report">incident reporting system</a></li>
                                            <li>Contact our safety team directly</li>
                                        </ul>
                                    </div>
                                    <div class="resource-card">
                                        <h3>Learning More</h3>
                                        <p>Continue your consent education:</p>
                                        <ul>
                                            <li>Attend our consent workshops</li>
                                            <li>Read recommended books and articles</li>
                                            <li>Practice negotiation with experienced community members</li>
                                        </ul>
                                    </div>
                                </div>
                            </div>

                            <div class="action-section">
                                <h2>Join Our Community</h2>
                                <p>Ready to practice consent-focused rope bondage in a supportive environment?</p>
                                <div class="action-buttons">
                                    <a href="/events" class="btn btn-primary">View Events</a>
                                    <a href="/how-to-join" class="btn btn-secondary">How to Join</a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    </div>
</div>

@code {
    private ContentPage? contentPage;
    private bool IsAdmin = false;
    private bool IsEditing = false;
    private bool IsSaving = false;
    private string UserId = string.Empty;
    
    private SfRichTextEditor? RichTextEditorRef;
    private string EditableContent = string.Empty;
    private ContentEditModel editModel = new();
    
    private class ContentEditModel
    {
        public string Title { get; set; } = string.Empty;
        public string MetaDescription { get; set; } = string.Empty;
        public string MetaKeywords { get; set; } = string.Empty;
    }
    
    private readonly List<ToolbarItemModel> ToolbarItems = new()
    {
        new() { Command = ToolbarCommand.Bold },
        new() { Command = ToolbarCommand.Italic },
        new() { Command = ToolbarCommand.Underline },
        new() { Command = ToolbarCommand.StrikeThrough },
        new() { Command = ToolbarCommand.Separator },
        new() { Command = ToolbarCommand.Formats },
        new() { Command = ToolbarCommand.Alignments },
        new() { Command = ToolbarCommand.Separator },
        new() { Command = ToolbarCommand.OrderedList },
        new() { Command = ToolbarCommand.UnorderedList },
        new() { Command = ToolbarCommand.Separator },
        new() { Command = ToolbarCommand.CreateLink },
        new() { Command = ToolbarCommand.Separator },
        new() { Command = ToolbarCommand.SourceCode },
        new() { Command = ToolbarCommand.Undo },
        new() { Command = ToolbarCommand.Redo }
    };
    
    protected override async Task OnInitializedAsync()
    {
        await LoadAuthenticationStateAsync();
        await Task.Delay(50);
        await LoadContentAsync();
    }
    
    private async Task LoadAuthenticationStateAsync()
    {
        try
        {
            var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
            var user = authState.User;
            
            if (user.Identity?.IsAuthenticated == true)
            {
                IsAdmin = user.IsInRole("Administrator");
            }
            
            UserId = user.FindFirst(ClaimTypes.NameIdentifier)?.Value ?? string.Empty;
        }
        catch (Exception ex)
        {
            IsAdmin = false;
            UserId = string.Empty;
        }
    }
    
    private async Task LoadContentAsync()
    {
        contentPage = await ContentPageService.GetOrCreateBySlugAsync("consent", "Consent & Negotiation");
    }
    
    private async Task StartEditAsync()
    {
        if (!IsAdmin || contentPage == null) return;
        
        EditableContent = contentPage.Content;
        editModel = new ContentEditModel
        {
            Title = contentPage.Title,
            MetaDescription = contentPage.MetaDescription ?? string.Empty,
            MetaKeywords = contentPage.MetaKeywords ?? string.Empty
        };
        
        IsEditing = true;
        StateHasChanged();
        
        await Task.Delay(100);
    }
    
    private async Task SaveContentAsync()
    {
        if (!IsAdmin || contentPage == null || IsSaving) return;
        
        IsSaving = true;
        StateHasChanged();
        
        try
        {
            contentPage = await ContentPageService.UpdateAsync(
                contentPage.Id, 
                EditableContent, 
                editModel.Title, 
                UserId, 
                editModel.MetaDescription, 
                editModel.MetaKeywords);
            
            IsEditing = false;
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("console.error", $"Error saving content: {ex.Message}");
        }
        finally
        {
            IsSaving = false;
            StateHasChanged();
        }
    }
    
    private async Task CancelEditAsync()
    {
        var confirmed = await JSRuntime.InvokeAsync<bool>("confirm", 
            "Are you sure you want to cancel? Any unsaved changes will be lost.");
            
        if (confirmed)
        {
            IsEditing = false;
            StateHasChanged();
        }
    }
}

