@using WitchCityRope.Core.DTOs

<div class="row mb-4">
    <div class="col-md-3 col-sm-6 mb-3">
        <div class="stat-card card h-100 border-0 shadow-sm">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-muted mb-1">Total Members</h6>
                        @if (IsLoading)
                        {
                            <div class="spinner-border spinner-border-sm" role="status">
                                <span class="visually-hidden">Loading...</span>
                            </div>
                        }
                        else
                        {
                            <h3 class="mb-0 text-primary">@Stats.TotalMembers.ToString("N0")</h3>
                        }
                    </div>
                    <div class="stat-icon text-primary">
                        <i class="bi bi-people-fill fs-1"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-3 col-sm-6 mb-3">
        <div class="stat-card card h-100 border-0 shadow-sm">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-muted mb-1">Vetted Members</h6>
                        @if (IsLoading)
                        {
                            <div class="spinner-border spinner-border-sm" role="status">
                                <span class="visually-hidden">Loading...</span>
                            </div>
                        }
                        else
                        {
                            <h3 class="mb-0 text-success">@Stats.VettedMembers.ToString("N0")</h3>
                        }
                    </div>
                    <div class="stat-icon text-success">
                        <i class="bi bi-shield-check fs-1"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-3 col-sm-6 mb-3">
        <div class="stat-card card h-100 border-0 shadow-sm">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-muted mb-1">Active Today</h6>
                        @if (IsLoading)
                        {
                            <div class="spinner-border spinner-border-sm" role="status">
                                <span class="visually-hidden">Loading...</span>
                            </div>
                        }
                        else
                        {
                            <h3 class="mb-0 text-info">@Stats.ActiveToday.ToString("N0")</h3>
                        }
                    </div>
                    <div class="stat-icon text-info">
                        <i class="bi bi-activity fs-1"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-3 col-sm-6 mb-3">
        <div class="stat-card card h-100 border-0 shadow-sm">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-muted mb-1">New This Month</h6>
                        @if (IsLoading)
                        {
                            <div class="spinner-border spinner-border-sm" role="status">
                                <span class="visually-hidden">Loading...</span>
                            </div>
                        }
                        else
                        {
                            <h3 class="mb-0 text-secondary">@Stats.NewThisMonth.ToString("N0")</h3>
                        }
                    </div>
                    <div class="stat-icon text-secondary">
                        <i class="bi bi-person-plus-fill fs-1"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter] public MemberStatsDto Stats { get; set; } = new();
    [Parameter] public bool IsLoading { get; set; }
}