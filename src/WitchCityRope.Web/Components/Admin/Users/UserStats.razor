@using WitchCityRope.Core.DTOs

<div class="stats-section mb-4">
    <div class="row g-3 justify-content-center">
        <div class="col-md-4">
            <div class="card stats-card border-primary">
                <div class="card-body text-center">
                    @if (IsLoading)
                    {
                        <div class="spinner-border spinner-border-sm text-primary" role="status"></div>
                    }
                    else
                    {
                        <i class="bi bi-people-fill stats-icon text-primary"></i>
                        <h3 class="stats-number text-primary">@Stats.TotalUsers.ToString("N0")</h3>
                    }
                    <p class="stats-label mb-0">Total Users</p>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card stats-card border-warning">
                <div class="card-body text-center">
                    @if (IsLoading)
                    {
                        <div class="spinner-border spinner-border-sm text-warning" role="status"></div>
                    }
                    else
                    {
                        <i class="bi bi-clock-history stats-icon text-warning"></i>
                        <h3 class="stats-number text-warning">@Stats.PendingVetting.ToString("N0")</h3>
                    }
                    <p class="stats-label mb-0">Pending Vetting</p>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card stats-card border-info">
                <div class="card-body text-center">
                    @if (IsLoading)
                    {
                        <div class="spinner-border spinner-border-sm text-info" role="status"></div>
                    }
                    else
                    {
                        <i class="bi bi-pause-circle stats-icon text-info"></i>
                        <h3 class="stats-number text-info">@Stats.OnHold.ToString("N0")</h3>
                    }
                    <p class="stats-label mb-0">On Hold</p>
                </div>
            </div>
        </div>
    </div>
    
    @if (!IsLoading && Stats.UsersByRole.Any())
    {
        <div class="row mt-3">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <h6 class="card-title">Users by Role</h6>
                        <div class="row">
                            @foreach (var roleGroup in Stats.UsersByRole.OrderBy(r => r.Key))
                            {
                                <div class="col-md-2 text-center">
                                    <strong class="d-block">@roleGroup.Value</strong>
                                    <small class="text-muted">@roleGroup.Key</small>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<style>
    .stats-card {
        transition: transform 0.2s;
        height: 100%;
    }
    
    .stats-card:hover {
        transform: translateY(-2px);
        box-shadow: 0 0.25rem 1rem rgba(0, 0, 0, 0.15) !important;
    }
    
    .stats-icon {
        font-size: 2rem;
        margin-bottom: 0.5rem;
    }
    
    .stats-number {
        font-size: 1.75rem;
        font-weight: 700;
        margin-bottom: 0;
    }
    
    .stats-label {
        font-size: 0.875rem;
        font-weight: 500;
        color: #6c757d;
    }
</style>

@code {
    [Parameter] public UserStatsDto Stats { get; set; } = new();
    [Parameter] public bool IsLoading { get; set; } = true;
}