# WitchCityRope Production Environment Configuration
# Copy this file to .env.production and update with your actual values
# Generated: {GENERATED_DATE}

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_HOST={DB_HOST}
DATABASE_PORT={DB_PORT}
DATABASE_NAME=witchcityrope_prod
DATABASE_USER={DB_USER}
DATABASE_PASSWORD={DB_PASSWORD}
DATABASE_SSL_MODE=require

# Connection String for .NET API
ConnectionStrings__DefaultConnection=Host={DB_HOST};Port={DB_PORT};Database=witchcityrope_prod;Username={DB_USER};Password={DB_PASSWORD};SSL Mode=require;Trust Server Certificate=true

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
ASPNETCORE_ENVIRONMENT=Production
ASPNETCORE_URLS=http://+:8080

# Application Settings
APP_NAME=WitchCityRope
APP_VERSION=1.0.0
APP_ENVIRONMENT=production

# =============================================================================
# JWT AUTHENTICATION CONFIGURATION
# =============================================================================
# IMPORTANT: Generate strong, unique secrets for production!
# Use: openssl rand -base64 64
Authentication__JwtSecret=CHANGE_THIS_IN_PRODUCTION_SUPER_SECRET_KEY_MINIMUM_64_CHARS_USE_OPENSSL_RAND!
Authentication__Issuer=WitchCityRope
Authentication__Audience=WitchCityRopeUsers
Authentication__ExpiryMinutes=60
Authentication__RequireHttps=true

# Cookie Configuration
Authentication__CookieName=WitchCityRope.Auth
Authentication__CookieDomain=witchcityrope.com
Authentication__CookieSecure=true
Authentication__CookieSameSite=Strict

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
CORS__AllowedOrigins=https://witchcityrope.com
CORS__AllowCredentials=true
CORS__AllowedMethods=GET,POST,PUT,DELETE,OPTIONS
CORS__AllowedHeaders=Content-Type,Authorization,X-Requested-With

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
Security__AllowedHosts=witchcityrope.com
Security__RequireHttps=true
Security__HstsMaxAge=31536000
Security__ForceHttpsRedirect=true

# Rate Limiting
Security__RateLimit__RequestsPerMinute=100
Security__RateLimit__BurstSize=10

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
Logging__LogLevel__Default=Information
Logging__LogLevel__Microsoft=Warning
Logging__LogLevel__Microsoft.Hosting.Lifetime=Information
Logging__LogLevel__WitchCityRope=Information

# Structured Logging
Logging__Console__IncludeScopes=true
Logging__Console__TimestampFormat=[yyyy-MM-dd HH:mm:ss]

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
Redis__ConnectionString=localhost:6379
Redis__Database=0
Redis__InstanceName=WitchCityRope-Prod
Redis__AbortOnConnectFail=false

# Session Configuration
Session__TimeoutMinutes=60
Session__CookieName=WitchCityRope.Session
Session__CookieSecure=true

# =============================================================================
# FILE STORAGE CONFIGURATION
# =============================================================================
Storage__Type=Local
Storage__LocalPath=/app/uploads
Storage__MaxFileSize=10485760
Storage__AllowedExtensions=.jpg,.jpeg,.png,.gif,.pdf,.doc,.docx
Storage__CDNUrl=https://witchcityrope.com/uploads

# For DigitalOcean Spaces (optional)
# Storage__Type=S3Compatible
# Storage__S3__BucketName=witchcityrope-uploads
# Storage__S3__Region=nyc3
# Storage__S3__AccessKey=YOUR_DO_SPACES_KEY
# Storage__S3__SecretKey=YOUR_DO_SPACES_SECRET
# Storage__S3__EndpointUrl=https://nyc3.digitaloceanspaces.com

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
# SMTP Configuration
Email__SmtpHost=smtp.example.com
Email__SmtpPort=587
Email__SmtpUser=noreply@witchcityrope.com
Email__SmtpPassword=CHANGE_ME
Email__FromAddress=noreply@witchcityrope.com
Email__FromName=WitchCityRope
Email__EnableSsl=true

# Email Templates
Email__TemplateDirectory=/app/templates/emails
Email__BaseUrl=https://witchcityrope.com

# =============================================================================
# FEATURE FLAGS
# =============================================================================
Features__EnableRegistration=true
Features__EnableGuestAccess=false
Features__EnableEventRegistration=true
Features__EnablePayments=true
Features__EnableNotifications=true
Features__MaintenanceMode=false

# =============================================================================
# MONITORING AND TELEMETRY
# =============================================================================
# Application Insights (optional)
# ApplicationInsights__ConnectionString=YOUR_APP_INSIGHTS_CONNECTION_STRING

# Health Checks
HealthChecks__DatabaseTimeout=30
HealthChecks__RedisTimeout=10
HealthChecks__DetailedErrors=false

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================
# Database Connection Pool
Database__MaxPoolSize=100
Database__MinPoolSize=5
Database__ConnectionTimeout=30
Database__CommandTimeout=60

# HTTP Client Configuration
HttpClient__TimeoutSeconds=30
HttpClient__RetryCount=3

# Caching
Cache__DefaultExpirationMinutes=60
Cache__SlidingExpirationMinutes=30

# =============================================================================
# ENVIRONMENT SPECIFIC SETTINGS
# =============================================================================
# These settings are specific to the production environment
ENVIRONMENT_NAME=Production
SERVER_NAME=witchcityrope-prod
DEPLOYMENT_TIMESTAMP={DEPLOYMENT_TIMESTAMP}

# Docker Configuration
DOCKER_REGISTRY=registry.digitalocean.com/witchcityrope
API_IMAGE_TAG=latest
WEB_IMAGE_TAG=latest

# =============================================================================
# SECURITY HEADERS
# =============================================================================
Security__ContentSecurityPolicy=default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline';
Security__XFrameOptions=DENY
Security__XContentTypeOptions=nosniff
Security__ReferrerPolicy=strict-origin-when-cross-origin

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
Backup__EnableAutomaticBackup=true
Backup__BackupIntervalHours=24
Backup__RetentionDays=30
Backup__EncryptionKey=GENERATE_STRONG_ENCRYPTION_KEY_FOR_BACKUPS

# =============================================================================
# CUSTOM APPLICATION SETTINGS
# =============================================================================
# Add your custom application-specific settings here
App__CommunityName=WitchCityRope
App__Location=Salem, MA
App__TimeZone=America/New_York
App__DefaultTheme=dark
App__EventCapacityDefault=50
App__RegistrationOpenDays=30

# Social Links
App__SocialLinks__Facebook=https://facebook.com/witchcityrope
App__SocialLinks__Instagram=https://instagram.com/witchcityrope
App__SocialLinks__Discord=https://discord.gg/witchcityrope

