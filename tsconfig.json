{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020", "DOM"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./",
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@helpers/*": ["tests/playwright/helpers/*"],
      "@pages/*": ["tests/playwright/pages/*"],
      "@tests/*": ["tests/playwright/*"]
    }
  },
  "include": [
    "tests/playwright/**/*.ts",
    "playwright.config.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}