# Test Environment Configuration (CI/CD)
# This file is used for GitHub Actions and automated testing

# Mock all external services for reliable CI/CD
USE_MOCK_PAYMENT_SERVICE=true
SKIP_WEBHOOK_VERIFICATION=true
PAYPAL_MODE=mock

# Database (GitHub Actions service container)
DATABASE_CONNECTION_STRING=Host=localhost;Port=5432;Database=test;Username=postgres;Password=postgres

# API Configuration
API_PORT=5655
ASPNETCORE_ENVIRONMENT=Test

# JWT Configuration for tests
JWT_SECRET=test-secret-key-for-ci-cd-only-not-for-production
JWT_ISSUER=http://localhost:5655
JWT_AUDIENCE=http://localhost:5173

# Logging
LOG_LEVEL=Warning
ENABLE_SENSITIVE_LOGGING=false

# Email (mocked)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_FROM=test@witchcityrope.local
SMTP_SKIP_SSL=true

# Feature Flags
ENABLE_PAYMENT_PROCESSING=true
ENABLE_WEBHOOK_PROCESSING=false
ENABLE_EMAIL_NOTIFICATIONS=false